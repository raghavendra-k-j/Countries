<resources>

    <style name="AppTheme.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">@font/app_font_regular</item>
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Default">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

</resources>