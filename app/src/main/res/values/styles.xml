<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MainToolbar.TitleTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/app_font_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/onSurfaceDark</item>
    </style>

    <style name="Widget.MainToolbar.SubTitleTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Button.Primary.Default" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_primary_rounded</item>
        <item name="android:textColor">@color/onPrimaryTextDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.EditText.Default" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/edit_text_rounded_on_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>